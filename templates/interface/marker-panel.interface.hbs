<div>
  <div class="form-group clearfix">
    <div class="col-xs-12 control-label">
      <label>Marker name</label>
    </div>
    <div class="col-xs-12">
	    <input v-bind:class="{'marker-error' : error}" type="text" class="form-control" v-model.trim="name" @keyup="onInputData"/>
      <div class="error-holder" v-if="error">\{{error}}</div>
    </div>
  </div>

  <div class="form-group clearfix">
    <div class="col-xs-12 control-label">
      <label>Marker icon</label>
    </div>
    <div class="col-xs-12">
      <div class="btn btn-default" @click.prevent="openIconPicker">
        <span v-if="icon">Replace icon</span>
        <span v-else>Select an icon</span>
      </div>
      <div v-if="icon" class="icon-holder">
        <div class="icon-wrapper">Selected icon: <i :class="'selected-icon ' + icon"></i></div>
        <div v-if="emptyIconNotification" class="text-danger icon-notification">
          <p>No icon was selected. The icon will be set to the one previously selected.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group clearfix">
    <div class="col-xs-6">
      <div class="control-label">
        <label>Marker color</label>
      </div>
      <div class="input-group" colorpicker-component>
        <div class="input-group-addon"><i :style="'background-color: ' + color"></i></div>
        <input type="text" :id="'list-item-color-' + id" class="form-control list-item-color" v-model="color" @keyup="onInputData">
      </div>
    </div>
    <div class="col-xs-6">
      <div class="control-label">
        <label>Marker size</label>
      </div>
      <input type="text" class="form-control" v-model.trim="size" @keyup="onInputData"/>
    </div>
  </div>
</div>
